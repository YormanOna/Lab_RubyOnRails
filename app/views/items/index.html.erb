<h1>Inventario</h1>
<%= button_to 'New Item', new_item_path, method: :get, class:'nuevo_item' %>
<table class = "table_inventory">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Cantidad</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item_path(item), class:'link_edit' %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity %></td>
        <td class="acciones">
            <%= button_to 'Editar', edit_item_path(item), method: :get, class:'btn_editar' %>
            <%= button_to 'Eliminar', item, method: :delete, data: { confirm: "¿Está seguro de eliminar #{item.name}?"}, class:'btn_borrar' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
