<div class="contenedor">
    <h1>New Item</h1>

    <%= form_with model: @item, local: true, class: 'new-item-form' do |form| %>
      <div class="form-group">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-input' %>
      </div>
      <br>
      <div class="form-group">
        <%= form.label :description, class: 'form-label' %>
        <%= form.text_area :description, class: 'form-textarea' %>
      </div>
      <br>
      <div class="form-group">
        <%= form.label :quantity, class: 'form-label' %>
        <%= form.number_field :quantity, class: 'form-input' %>
      </div>
      <br>
      <div class="form-group">
        <%= form.submit 'Add Item', class: 'form-submit' %>
      </div>
    <% end %>
  </div>